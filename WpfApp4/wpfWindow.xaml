<Window x:Class="WpfApp4.wpfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="wpfWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="list">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock x:Name="userNameTxtBlock" Text="{Binding Path=name}">Name</TextBlock>
                        <TextBlock x:Name="passwordTxtBlock" Text="{Binding Path=password}">Password</TextBlock>
                        <TextBlock x:Name="emailTxtBlock" Text="{Binding Path=email}">Mail</TextBlock>
                        
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
